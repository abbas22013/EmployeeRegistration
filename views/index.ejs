<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        color: #333;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 0 20px;
      }

      h1 {
        color: #333;
        font-size: 3rem;
        margin-bottom: 20px;
        font-weight: bold;
        width: 100%;
        text-align: center;
      }

      .container {
        background-color: #fff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      p {
        margin-bottom: 20px;
        font-size: 1.2rem;
        text-align: center;
      }

      a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
        margin-right: 10px;
      }

      a:hover {
        text-decoration: underline;
      }

      .btn {
        display: inline-block;
        padding: 12px 25px;
        font-size: 1.2rem;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 10px;
      }

      .sign-out-btn {
        background-color: #ff4d4d;
        color: white;
      }

      .sign-out-btn:hover {
        background-color: #e63e3e;
      }

      .add-employee-btn {
        background-color: #4CAF50;
        color: white;
      }

      .add-employee-btn:hover {
        background-color: #45a049;
      }

      .show-all-btn {
        background-color: #007bff;
        color: white;
      }

      .show-all-btn:hover {
        background-color: #0056b3;
      }

      .form-container {
        text-align: center;
        margin-top: 20px;
      }

      .vip-lounge {
        font-size: 1.2rem;
        margin-top: 20px;
        font-weight: bold;
      }

      .form-container a {
        color: #007bff;
        text-decoration: none;
        font-size: 1.2rem;
        display: inline-block;
        margin-top: 15px;
      }

      .form-container a:hover {
        text-decoration: underline;
      }

      @media (max-width: 600px) {
        .container {
          padding: 30px;
        }

        h1 {
          font-size: 2.5rem;
        }

        p,
        .btn,
        .form-container a {
          font-size: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <% if (user) { %>
      <h1>Welcome to the app, <%= user.username %>!</h1>
      <a href="/auth/sign-out">Sign out</a>
      <% } else { %>
      <h1>Welcome to the app, guest.</h1>
      <p>
        <a href="/auth/sign-up">Sign up</a> or <a href="/auth/sign-in">sign in</a>.
      </p>
      <% } %>
<br>
      <% if (user) { %>
        <a href="/users/<%= user._id %>/employees/new">Add Employee</a>
      <% } else { %>
        <p>Please log in to add employees.</p>
      <% } %>
      
      <p><a href="/protected">Get into the VIP Users Only lounge!</a></p>
      


      <% if (user) { %>
        <a href="/users/<%= user._id %>/employees" class="show-all-btn">Show All Employees</a>
      <% } else { %>
        
      <% } %>
      
  </body>
</html>