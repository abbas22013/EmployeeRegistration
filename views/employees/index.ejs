<!-- applications/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Apps</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
        color: #333;
      }

      h1 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
      }

      a {
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
    
        
      }

      a:hover {
        text-decoration: underline;
      }

      .add-app-button {
        display: inline-block;
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        font-size: 1.1rem;
        border-radius: 5px;
        margin: 20px auto;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .add-app-button:hover {
        background-color: #45a049;
      }

      ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
      }

      li {
        background-color: #fff;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 10px;
        transition: transform 0.2s ease;
      }

      li:hover {
        transform: scale(1.02);
      }

      li a {
        color: #007bff;
        text-decoration: none;
        font-size: 1rem;
      }

      li a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Your Apps</h1>
    <a href="/users/<%=user._id%>/employees/new">Add an App</a>
    <!-- Add the following: -->
    <ul>
      <% employees.forEach((employee)=>{ %>
      <li>
        <a href="/users/<%= user._id %>/employees/<%= employee._id %>">
          <%= employee.employeeName %> <br> <%= employee.email %>
        </a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>