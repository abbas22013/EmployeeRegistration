
<!-- views/applications/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= employee.employeeName %></title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
      }

      h1 {
        color: #333;
        font-size: 3rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
      }

      .container {
        background-color: #fff;
        padding: 50px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 900px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .employee-details {
        width: 100%;
        margin-bottom: 40px;
      }

      .employee-details p {
        font-size: 1.4rem;
        margin-bottom: 20px;
        text-align: center;
      }

      .employee-details a {
        color: #007bff;
        text-decoration: none;
        font-size: 1.4rem;
        font-weight: bold;
        margin-bottom: 30px;
        text-align: center;
        display: block;
      }

      .employee-details a:hover {
        text-decoration: underline;
      }

      .form-container {
        width: 100%;
        text-align: center;
      }

      button {
        padding: 15px 30px;
        font-size: 1.5rem;
        color: white;
        background-color: #f44336;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 40px;
      }

      button:hover {
        background-color: #d32f2f;
      }

      .form-container a {
        color: #007bff;
        text-decoration: none;
        font-size: 1.4rem;
        font-weight: bold;
        margin-top: 30px;
        display: block;
      }

      .form-container a:hover {
        text-decoration: underline;
      }

      @media (max-width: 600px) {
        h1 {
          font-size: 2rem;
        }

        .employee-details p,
        .employee-details a {
          font-size: 1.2rem;
        }

        button {
          font-size: 1.2rem;
          padding: 12px 25px;
        }
      }
    </style>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1><%= employee.employeeName %> at <%= employee.email %></h1>

    <% if (employee.notes) { %>
    <p>Notes: <%= employee.notes %></p>
    <% } %>

    <% if (employee.postingLink) { %>
      <a href="<%= employee.postingLink %>">View employees</a>
    <% } %>
    <p>Current Status: <%= employee.status %></p>




    <a href="/users/<%= user._id %>/employees/<%= employee._id %>/edit">
        Edit this employee
      </a>
      


      <form
      action="/users/<%= user._id %>/employees/<%= employee._id %>?_method=DELETE"
      method="POST"
  >
    <button type="submit">Delete this employee</button>
  </form>
  


 
  </body>
</html>

