
<!-- views/applications/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= employee.employeeName %></title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
        color: #333;
      }

      h1 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
      }

      .employee-details {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 0 auto;
      }

      .employee-details p {
        font-size: 1rem;
        margin-bottom: 10px;
      }

      .employee-details a {
        color: #4CAF50;
        text-decoration: none;
        font-size: 1.1rem;
        font-weight: bold;
      }

      .employee-details a:hover {
        text-decoration: underline;
      }

      form {
        margin-top: 20px;
        text-align: center;
      }

      button {
        padding: 10px 20px;
        font-size: 1rem;
        color: white;
        background-color: #f44336;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #d32f2f;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1><%= employee.employeeName %> at <%= employee.email %></h1>

    <% if (employee.notes) { %>
    <p>Notes: <%= employee.notes %></p>
    <% } %>

    <% if (employee.postingLink) { %>
      <a href="<%= employee.postingLink %>">View employees</a>
    <% } %>
    <p>Current Status: <%= employee.status %></p>




    <a href="/users/<%= user._id %>/employees/<%= employee._id %>/edit">
        Edit this employee
      </a>
      


      <form
      action="/users/<%= user._id %>/employees/<%= employee._id %>?_method=DELETE"
      method="POST"
  >
    <button type="submit">Delete this employee</button>
  </form>
  


 
  </body>
</html>

